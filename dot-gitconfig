	insteadOf = https://github.com/
[init]
	defaultBranch = main
	templateDir = $HOME/.git-template
[commit]
	verbose = true
	gpgsign = true
[push]
	autoSetupRemote = true
[core]
	excludesFile = ~/.gitignore
[gpg]
	format = ssh
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign

# Found on https://blog.gitbutler.com/how-git-core-devs-configure-git/
[tag]
	sort = version:refname
[diff]
	algorithm = histogram
	colorMoved = plain
[help]
	autocorrect = prompt
[column]
	ui = auto

